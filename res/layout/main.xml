<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/knowIt"
            android:id="@+id/bKnow" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="184dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cleanOrMot"
            android:id="@+id/tvClean" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="169dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ServiceUp"
            android:id="@+id/buttonServiceUp"
            android:layout_alignTop="@+id/bKnow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            android:enabled="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ServiceDown"
            android:id="@+id/buttonServiceDown"
            android:enabled="false" android:layout_below="@+id/buttonServiceUp" android:layout_centerHorizontal="true"/>
    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarGetting"
            android:visibility="invisible" android:layout_alignTop="@+id/tvClean"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>


